{{#block "header"}}
  <!doctype html>

  <title>{{content.title}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <link rel="shortcut icon" sizes="256x256" href="img/planets-app-icon-256.png">
  <link rel="shortcut icon" sizes="196x196" href="img/planets-app-icon-196.png">
  <link rel="shortcut icon" sizes="128x128" href="img/planets-app-icon-128.png">
  <link rel="apple-touch-icon" sizes="128x128" href="img/planets-app-icon-128.png">
  <link rel="apple-touch-icon-precomposed" sizes="128x128" href="img/planets-app-icon-128.png">

  <link rel="stylesheet" href="css/main.css" type="text/css">
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
{{/block}}

{{#block "content"}}
{{/block}}

{{#block "footer"}}
  {{> vendorscripts}}

  {{!-- Core Scripts --}}
  <script type="text/javascript" src="/js/handlebars.helpers.js"></script>
  <script type="text/javascript" src="/js/templates.js"></script>
  <script type="text/javascript" src="/js/core.js"></script>

  {{!-- App Script --}}
  <script type="text/javascript" src="/js/{{appScript}}"></script>

  {{!-- LiveReloading --}}
  {{#if __dev__}}
    <script type="text/javascript" src="http://localhost:35729/livereload.js?snipver=1"></script>
  {{/if}}

{{/block}}
